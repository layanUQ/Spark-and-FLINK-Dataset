//Who are the top six publishers with the highest number of publications in the dataset?//
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

# Load your DataFrame here
sample_df = pd.read_csv(
    r"D:\arabic_ccnews_partial.csv",
    engine='python',
    on_bad_lines='warn'  # This will print a warning for each bad line
)

# Check the DataFrame columns
print(sample_df.columns)

# Assuming the publisher is the 6th column
publisher_column_name = sample_df.columns[12]  # Change this index if necessary

# Group by publisher and count articles
top_publishers = sample_df[publisher_column_name].value_counts().head(6).reset_index()
top_publishers.columns = ['Publisher', 'Number of Articles']

# Plotting the results
plt.figure(figsize=(12, 6))
sns.barplot(data=top_publishers, x='Publisher', y='Number 
of Articles', palette='viridis')
plt.title('Top 6 Publishers with the Highest Number of Publications')
plt.xlabel('Publisher')
plt.ylabel('Number of Articles')
plt.xticks(rotation=45)
plt.show()
